<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Default text sizes -->
    <dimen name="text_size_title">22sp</dimen>
    <dimen name="text_size_subtitle">18sp</dimen>
    <dimen name="text_size_normal">14sp</dimen>

    <!-- Column space size -->
    <!-- It needs to be used as a padding of the right side of the left element and the left side
    of the right element. -->
    <dimen name="column_space_size">4dp</dimen>

    <!-- Placeholder values those need to be modified from the code. -->
    <!-- I make them small in order to make it visibile if you forgot to modify them in the code. -->
    <dimen name="placeholder_px_value_set_in_the_code">2px</dimen>
    <dimen name="placeholder_in_value_set_in_the_code">2in</dimen>
    <dimen name="placeholder_mm_value_set_in_the_code">2mm</dimen>
    <dimen name="placeholder_pt_value_set_in_the_code">2pt</dimen>
    <dimen name="placeholder_dp_value_set_in_the_code">2dp</dimen>
    <dimen name="placeholder_sp_value_set_in_the_code">2sp</dimen>

    <!-- Default progress bar size. I cannot find any recommendations in the Android Design guidelines. -->
    <dimen name="progress_bar_dimensions">42dp</dimen>

    <!-- Error TextView padding. -->
    <dimen name="error_textview_padding">60dp</dimen>

    <!-- Element spacing -->
    <dimen name="space_small">14dp</dimen>
    <dimen name="space_medium">22dp</dimen>
</resources>
